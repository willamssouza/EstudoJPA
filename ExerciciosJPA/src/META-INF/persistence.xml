<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ExerciciosJPA" transaction-type="RESOURCE_LOCAL">
		<class>dominio.Empregado</class>
		<class>dominio.Endereco</class>
		<class>dominio.Estacionamento</class>
		<class>dominio.Departamento</class>
		<class>dominio.Projeto</class>
		<class>dominio.ProjetoId</class>
		<class>dominio.Alocacao</class>
		<class>dominio.AlocacaoId</class>
		<class>dominio.Efetivo</class>
		<class>dominio.Contratado</class>
		<class>dominio.Veiculo</class>
		<class>dominio.Terrestre</class>
		<class>dominio.Aereo</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql:DBTeste"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="pgadmin"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="eclipselink.logging.level" value="ALL"/>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
		</properties>
	</persistence-unit>
</persistence>
